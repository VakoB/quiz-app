<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.groups.GroupDetailsFragment">

    <TextView
        android:id="@+id/groupDetailsGroupNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        tools:text="Group Name"
        android:textSize="48sp"
        android:textColor="#110b32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/groupDetailsCodeTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODE: "
        android:textSize="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupDetailsGroupNameTv" />

    <TextView
        android:id="@+id/groupDetailsCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/groupDetailsCodeTitleTv"
        app:layout_constraintStart_toEndOf="@+id/groupDetailsCodeTitleTv"
        app:layout_constraintTop_toTopOf="@+id/groupDetailsCodeTitleTv" />

    <TextView
        android:id="@+id/groupDetailsMembersTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Members:"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupDetailsCodeTv"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupMembersRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/groupDetailsCreateGameButton"
        app:layout_constraintTop_toBottomOf="@+id/groupDetailsMembersTitleTv"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/groupDetailsCreateGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="16dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/groupDetailsJoinGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="16dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>