<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.groups.CreateGroupFragment">

    <TextView
        android:id="@+id/createGroupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create group"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/createGroupGroupNameEt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createGroupGroupNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Group name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"/>

    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create group"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/createGroupGroupNameEt"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>