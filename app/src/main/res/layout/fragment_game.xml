    <TextView
        android:id="@+id/gameOption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        tools:text="option 1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameQuestion"
        android:layout_marginTop="40dp"
        android:background="@drawable/option_background"
        android:clickable="true"
        android:focusable="true"
        />

    <TextView
        android:id="@+id/gameOption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        tools:text="option 2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOption1"
        android:layout_marginTop="8dp"
        android:background="@drawable/option_background"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/gameOption3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        tools:text="option 3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOption2"
        android:layout_marginTop="8dp"
        android:background="@drawable/option_background"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/gameOption4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        tools:text="option 4"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOption3"
        android:layout_marginTop="8dp"
        android:background="@drawable/option_background"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/gameNextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Next Question"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/gameFinishGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>