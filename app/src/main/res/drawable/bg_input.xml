<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>

            <gradient
                android:startColor="#E3F2FD"
                android:endColor="#FCE4EC"
                android:angle="0"/>

            <stroke
                android:width="2dp"
                android:color="#FF80AB"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>

            <gradient
                android:startColor="#F8FBFF"
                android:endColor="#FFF1F6"
                android:angle="0"/>

            <stroke
                android:width="1dp"
                android:color="#E0E0E0"/>
        </shape>
    </item>

</selector>
